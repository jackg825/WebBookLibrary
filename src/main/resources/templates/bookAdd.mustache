{{<layout.mustache}}
{{$body}}

    <div class="container">
      <div class="flex-grid">
        <form method="post">
            <div class="row cells4 flex-just-center">
                <div class="cell size4 margin10">
                  <lable>Book Cover Image Link : </lable>
                  <div class="input-control text full-size">
                      <input type="text" name="img" placeholder="Input image link here...">
                  </div>
                </div>
            </div>
            <div class="row cells4 flex-just-center">
              <div class="cell size2 margin5">
                <lable>Book Name : </lable>
                <div class="input-control text full-size">
                    <input type="text" name="name" placeholder="Input book name here...">
                </div>
              </div>
              <div class="cell size2 margin5">
                <lable>Book Author : </lable>
                <div class="input-control text full-size">
                    <input type="text" name="author" placeholder="Input author here...">
                </div>
              </div>
            </div>
            <div class="row cells4 flex-just-center">
              <div class="cell size2 margin5">
                <lable>Book ISBN-10 : </lable>
                <div class="input-control text full-size">
                    <input type="text" name="isbn10" placeholder="Input book ISBN-10 here...">
                </div>
              </div>
              <div class="cell size2 margin5">
                <lable>Book ISBN-13 : </lable>
                <div class="input-control text full-size">
                    <input type="text" name="isbn13" placeholder="Input book ISBN-13 here...">
                </div>
              </div>
            </div>
            <div class="row cells4 flex-just-center">
              <div class="cell size4 margin10">
                <lable>Book Description : </lable>
                <div class="input-control text full-size">
                    <input type="text" name="desc" placeholder="Input book description here...">
                </div>
              </div>
            </div>

            <div class="row cells4 flex-just-center">
              <div class="cell size2 margin5">
                <button type="submit" formaction="/add" class="button loading-pulse lighten primary full-size">Save</button>
              </div>
              <div class="cell size2 margin5">
                <button type="submit" formmethod="get" formaction="/" class="button full-size">Cancel</button>
              </div>
            </div>
        </form>
      </div>
    </div>

